<div id="login-form">
  <div :if={@success_message} class="notification is-success"><%= @success_message %></div>
  <div :if={@error_message} class="notification is-danger"><%= @error_message %></div>
  <.simple_form :let={f} for={%{}} as="user" hx-post={~p"/users/log_in"} hx-target="closest #login-form" hx-swap="outerHTML">
    <input type="hidden" name="_csrf_token" value={get_csrf_token()} />
    <.input field={f[:email]} type="email" label="Email" required />
    <.input field={f[:password]} type="password" label="Password" required />
    <.input field={f[:remember_me]} type="checkbox" label="Keep me logged in" />

    <div class="field">
      <div class="control">
        <.button type="submit">
          Sign in <span aria-hidden="true">â†’</span>
        </.button>
      </div>
    </div>
  </.simple_form>
</div>
