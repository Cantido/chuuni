<article class="message is-danger">
  <div class="message-header">
    <p>Error</p>
    <button class="delete" :if={@close_url} hx-get={@close_url} hx-swap="outerHTML" hx-target="closest .message" aria-label="delete"></button>
  </div>
  <div class="message-body">
    <%= @message %>
  </div>
</article>
